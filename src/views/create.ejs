<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de creación' }) %>

	<body>
		<!-- Header -->
		<%- include('partials/headerNavbar') %>
			<!-- /Header -->

			<!-- <% if (locals.errors) { %>
				<% for(let oneError in errors) { %>
					<p>
						<%= errors[oneError].msg %>
					</p>
				<% } %>
			<% } %> -->
						<div class="container products-wrapper">
							<div class="row">
								<div class="col-12">
									<h2 class="products-title">Formulario de creación de productos</h2>
								</div>
							</div>
							<div class="col-12">
								<form action="/products" method="POST" enctype="multipart/form-data">
									<div class="row product-detail">
										<div class="col-12 col-md-6">
											<label for="name" class="form-label">Nombre del producto:</label>
											<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok"
												class="form-input" value="<%= locals.oldData && oldData.name ? oldData.name : "" %>">
											<% if(locals.errors && errors.name) { %>
												<div class="form-danger">
													<%= errors.name.msg %> 
												</div>
											<% } %>											
										</div>
										<div class="col-12 col-md-6">
											<label for="price" class="form-label">Precio del producto:</label>
											<input type="text" id="price" name="price" placeholder="Ej: 5678"
												class="form-input" value="<%= locals.oldData && oldData.price ? oldData.price : "" %>">
											<% if(locals.errors && errors.price) { %>
												<div class="form-danger">
													<%= errors.price.msg %> 
												</div>
											<% } %>		
										</div>
										<div class="col-12 col-md-6">
											<label for="discount" class="form-label">Descuento:</label>
											<input type="text" id="discount" name="discount" placeholder="Ej: 15"
												class="form-input" value="<%= locals.oldData && oldData.discount ? oldData.discount : "" %>">
											<% if(locals.errors && errors.discount) { %>
												<div class="form-danger">
													<%= errors.discount.msg %> 
												</div>
											<% } %>		
										</div>
										<div class="col-12 col-md-6">
											<label for="category" class="form-label">Categoría:</label>
											<select name="category" id="category" class="form-input">
												<option value="">Elegí</option>
												<option value="in-sale" <%= locals.oldData && oldData.category == 'in-sale' ? 'selected' : null %>>En oferta</option>
												<option value="visited" <%= locals.oldData && oldData.category == 'visited' ? 'selected' : null %>>Últimos agregados</option>
											</select>
											<% if(locals.errors && errors.category) { %>
												<div class="form-danger">
													<%= errors.category.msg %> 
												</div>
											<% } %>		
										</div>
										<div class="col-12">
											<label for="description" class="form-label">Descipción:</label>
											<textarea name="description" id="description" class="form-input"><%= locals.oldData && oldData.description ? oldData.description : null %></textarea>
											<% if(locals.errors && errors.description) { %>
												<div class="form-danger">
													<%= errors.description.msg %> 
												</div>
											<% } %>		
										</div>
										<div class="col-12 col-md-6">
											<label for="image" class="form-label">Imagen:</label>
											<input type="file" id="image" name="product-image" class="form-input-img">
										</div>
										<div class="col-12">
											<button type="submit" class="buy-now-button">Guardar producto</button>
										</div>
									</div>
								</form>
							</div>

						</div>
						<!-- /todos los productos -->

						<!-- footer -->
						<%- include('partials/footer') %>
							<!-- /footer -->
	</body>

</html>